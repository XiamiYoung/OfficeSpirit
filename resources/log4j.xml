<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="RootAppender" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
             value="(%-5p) %d - %m%n" />
    </layout>
  </appender>

  <appender name="LogAppender" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="logs/access.log"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
             value="[%p]  %d{yyyy-MM-dd HH:mm:ss} --- %m%n " />
    </layout>
  </appender>

  <logger name="log">
    <appender-ref ref="LogAppender" />
  </logger>

  <root>
    <level value="DEBUG" />
  </root>

</log4j:configuration>
